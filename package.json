{
  "name": "localoom",
  "version": "1.0.0",
  "description": "Record the screen and yourself",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.tamirp.yourapp",
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["arm64", "x64"]  
        },
        {
          "target": "zip",
          "arch": ["arm64", "x64"]
        }
      ],
      "category": "public.app-category.productivity",
      "icon": "icons.icns"  
    },
    "files": [
      "build/**/*",
      "main.js",
      "renderer.js",
      "preload.js",
      "index.html",
      "node_modules/**/*"
    ],
    "asar": true 
  },
  "devDependencies": {
    "electron": "^X.X.X",
    "electron-builder": "^X.X.X"
  }
}